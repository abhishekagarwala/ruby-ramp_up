<% if user_signed_in? %>

    <h2>Welcome <%= current_user.username %></h2>

    <%= link_to "Tweets", tweets_path, :method => :get %>
    </br>
    <%= link_to "Following Users", following_path, :method => :get %>
    </br>
    <%= link_to "Followers", follower_path, :method => :get %>
    </br>
    <%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>

<% else %>

    <h1> welcome to twitter community</h1>
    <%= link_to "Sign In", new_user_session_path, :method => :get %>
    <%= link_to "Sign up", new_user_registration_path, :method => :get %>

<% end %>