<% if !@followers.empty? %>
    <h3>Followers:- </h3>
    <ul>
        <% @followers.each do |f| %>
            <li>
                <%= f.follower.username %> | <%= f.follower.email %>
            </li>
        <% end %>
    </ul>
<% else %>
    <h3>You have No Followers !</h3>
<% end %>

<%= link_to "Home", root_path, :method => :get %>